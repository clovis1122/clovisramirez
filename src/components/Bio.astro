---
import { site } from "../config/site";
---
<div class="bio text-foreground">
  <img src="/assets/avatar.png" alt={site.author} width="48" height="48" loading="lazy" />
  <p class="bio-text">
    A blog by <strong>{site.author}</strong> <small class="country">DO</small>
    <br />
    On the daily life of a Software Engineer.
  </p>
</div>

<style>
  .bio {
    display: flex;
    gap: 16px;
    align-items: center;
    margin: 56px 0 0;
  }

  .bio img {
    width: 52px;
    height: 52px;
    object-fit: cover;
    border-radius: 50%;
    border: 4px solid #a97f3f;
    box-shadow: 0 0 0 1px rgb(0 0 0 / 0.2);
  }

  .bio-text {
    margin: 0;
    line-height: 1.45;
    max-width: 540px;
  }

  .bio-text strong {
    font-weight: 700;
  }

  .country {
    margin-left: 1px;
    font-size: 0.72em;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    vertical-align: text-top;
  }

  @media (max-width: 768px) {
    .bio {
      margin-top: 36px;
      align-items: flex-start;
    }

    .bio-text {
      line-height: 1.4;
    }
  }
</style>
