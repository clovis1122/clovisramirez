---
import { site } from "../config/site";
---
<footer class="footer text-foreground">
  {site.social.map((platform, index) => (
    <span class="item">
      <a href={platform.url} target="_blank" rel="noopener noreferrer">
        {platform.name}
      </a>
      {index < site.social.length - 1 ? " â€¢ " : ""}
    </span>
  ))}
</footer>

<style>
  .footer {
    margin-top: clamp(56px, 10vh, 96px);
    padding-bottom: clamp(20px, 5vh, 38px);
    line-height: 1.45;
  }

  .item {
    white-space: nowrap;
  }

  .footer a {
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  @media (max-width: 768px) {
    .footer {
      margin-top: clamp(44px, 8vh, 72px);
      padding-bottom: clamp(18px, 5vh, 28px);
    }
  }

  @media (max-height: 760px) {
    .footer {
      margin-top: 56px;
      padding-bottom: 24px;
    }
  }
</style>
