---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import Bio from "../components/Bio.astro";
import { formatDate } from "../utils/dates";

type PostEntry = CollectionEntry<"posts">;

const posts = (await getCollection("posts")).sort(
  (a: PostEntry, b: PostEntry) => b.data.date.getTime() - a.data.date.getTime()
);

const getExcerpt = (body: string, maxLength = 150) => {
  const plainText = body
    .replace(/!\[[^\]]*\]\([^)]+\)/g, " ")
    .replace(/\[([^\]]+)\]\([^)]+\)/g, "$1")
    .replace(/`([^`]+)`/g, "$1")
    .replace(/[*_~>#]/g, "")
    .replace(/\n+/g, " ")
    .replace(/\s+/g, " ")
    .trim();

  if (plainText.length <= maxLength) {
    return plainText;
  }

  const softCut = plainText.slice(0, maxLength);
  const lastSpaceIndex = softCut.lastIndexOf(" ");
  const safeCut = lastSpaceIndex > 0 ? softCut.slice(0, lastSpaceIndex) : softCut;

  return `${safeCut.trimEnd()}...`;
};
---
<BaseLayout>
  <Bio slot="header-extra" />
  <section class="posts">
    {posts.map((post: PostEntry) => (
      <article class="post-card">
        <h2>
          <a href={`/posts/${post.slug}/`}>{post.data.title}</a>
        </h2>
        <p class="date text-muted">{formatDate(post.data.date)}</p>
        <p class="excerpt">{getExcerpt(post.body, 120)}</p>
      </article>
    ))}
  </section>
</BaseLayout>

<style>
  .posts {
    display: grid;
    gap: 48px;
  }

  .post-card {
    padding: 0;
  }

  .post-card h2 {
    margin-bottom: 12px;
    line-height: 1.15;
  }

  .post-card h2 a {
    color: var(--accent-strong);
    text-decoration: none;
  }

  .date {
    font-weight: 700;
    font-size: 0.94em;
    margin-bottom: 4px;
  }

  .excerpt {
    margin-top: 0;
    margin-bottom: 0;
    max-width: 760px;
  }

  @media (max-width: 768px) {
    .posts {
      gap: 38px;
    }

    .post-card h2 {
      margin-bottom: 8px;
    }
  }
</style>
